generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Answer {
  answer_id   Int      @id @default(autoincrement())
  student_id  Int
  question_id Int
  answer      String?
  question    Question @relation(fields: [question_id], references: [question_id])
}

model Question {
  question_id       Int      @id
  lesson_id         Int
  question_type_id  Int
  question          String
  seq               Int
  hypothesis        String?
  up_text           String?
  down_text         String?
  more_text         String?
  variables_options String?
  group             Int?
  text_row          Int?
  answers           Answer[]
}